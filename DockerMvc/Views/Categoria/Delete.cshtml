@model DockerMvc.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Eliminar Categoría</h2>

    <form asp-action="Delete" method="post">
        <div class="form-group">
            <label asp-for="Name">Nombre:</label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Description">Descripción:</label>
            <textarea asp-for="Description" class="form-control" rows="3" readonly></textarea>
        </div>
        <input type="hidden" asp-for="CatId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
