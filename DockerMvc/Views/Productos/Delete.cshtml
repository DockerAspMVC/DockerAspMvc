@model DockerMvc.Models.Productos 

@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Eliminar Producto</h2>

    <form asp-action="Delete" asp-controller="Productos" method="post">
        <div class="form-group">
            <label asp-for="Nombre">Nombre:</label>
            <input asp-for="Nombre" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Descripcion">Descripción:</label>
            <textarea asp-for="Descripcion" class="form-control" rows="3" disabled></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Imagen">Imagen:</label>
            <br />
            <img src="@Model.Imagen" class="img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
        </div>
        <div class="form-group">
            <label asp-for="Precio">Precio:</label>
            <input asp-for="Precio" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Stock">Stock:</label>
            <input asp-for="Stock" class="form-control" disabled />
        </div>
        <input type="hidden" asp-for="ProduId" />

        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" asp-controller="Productos" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
