@model Productos;
@{
    ViewData["Title"] = "Editar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Editar Producto</h2>

    <form asp-action="Edit" asp-controller="Productos" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="Nombre">Nombre:</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descripcion">Descripción:</label>
            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Imagen">Imagen:</label>
            <input type="file" class="form-control-file" asp-for="Imagen">
            <img src="@Model.Imagen" class="img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
        </div>
        <div class="form-group">
            <label asp-for="Precio">Precio:</label>
            <input asp-for="Precio" class="form-control" step="0.01" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Stock">Stock:</label>
            <input asp-for="Stock" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="ProduId" />

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" asp-controller="Productos" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    <script>
        // Validación de formulario usando Bootstrap (requiere Bootstrap 4+)
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}
