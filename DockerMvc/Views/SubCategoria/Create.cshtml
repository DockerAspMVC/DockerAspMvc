@model DockerMvc.Models.SubCategoria

@{
    ViewData["Title"] = "Create SubCategoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Create SubCategoria</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        
        
        <div class="form-group">
            <label asp-for="CatId">Categoría:</label>
            <select asp-for="CatId" class="form-control" asp-items="ViewBag.Categorias"></select>
        </div>
        
        <div class="form-group">
            <label for="selectedProducts">Productos:</label>
            <select id="selectedProducts" name="selectedProducts" class="form-control" multiple>
                @foreach (var producto in ViewBag.Productos)
                {
                    <option value="@producto.Value">@producto.Text</option>
                }
            </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <script>
        // Form validation using Bootstrap (requires Bootstrap 4+)
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}
