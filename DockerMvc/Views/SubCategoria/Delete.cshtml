@model DockerMvc.Models.SubCategoria
@{
    ViewData["Title"] = "Eliminar SubCategoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Eliminar SubCategoría</h2>

    <form asp-action="Delete" asp-controller="SubCategoria" method="post">
        <input type="hidden" asp-for="SubId" />

        <div class="form-group">
            <label asp-for="Image" class="control-label">Imagen de SubCategoría:</label>
            <img src="@Model.Image" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;" />
        </div>
        <div class="form-group">
            <label asp-for="ProduId" class="control-label">Producto:</label>
            <input type="text" asp-for="Productos.Nombre" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="CatId" class="control-label">Categoría:</label>
            <input type="text" asp-for="Categoria.Name" class="form-control" disabled />
        </div>

        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
